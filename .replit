[[workflows.workflow]]
name = "penalty_tracker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install openpyxl>=3.1 && python build_strafenlog.py && python export_csv.py"

[[workflows.workflow]]
name = "Web App"
author = "agent"

[[workflows.workflow.tasks]]
